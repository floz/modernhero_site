doctype 5
html
  head
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="description", content="Conte dragon")
    meta(name="viewport", content="initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no, width=device-width")
    title Tales of Heroes - Awesome iPhone game
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Graduate', type='text/css')
    link(rel='stylesheet', href='./css/reset.css')
    link(rel='stylesheet', href='./css/main.css')
body

  .main
    .background
      .background__line--blue_dark
      .background__line--blue_medium
      .background__line--blue_light
      .background__line--yellow
      .background__line--orange_light
      .background__line--orange_medium
      .background__line--red
      .background__line--green_dark
      .background__line--green_light
      .background__line--brown

    .landscape
      .landscape__clouds
        .landscape__cloud.landscape__cloud--cloud0
        .landscape__cloud.landscape__cloud--cloud1
        .landscape__cloud.landscape__cloud--cloud2
        .landscape__cloud.landscape__cloud--cloud3
        .landscape__cloud.landscape__cloud--cloud4 
      .landscape__characters
        .landscape__character.landscape__character--human
          .selector.selector--human
        .landscape__character.landscape__character--dog
      .landscape__tree
      .landscape__fences
        .landscape__fences--left
        .landscape__fences--right

    .content
      .content__background
      .logo
        .logo__title
        .logo__icon
      .content__separator_big_dots.separator--light
      .content__description.
        <h1 class="content__description--title">tales of heroes</h1>
        is an epic pixel adventure game
        <br />create by <a class="content__description--link" href="http://www.floz.fr">floz</a> & <a class="content__description--link" href="http://cargocollective.com/filsdegraphiste/">filsdegraphiste</a>
      .content__separator_vertical.separator--vertical
      .preview_world
        .preview_world__banner
          span VISIT THE WORLD
        a.preview_world__button(href="#")
          span.world_diaporama
            img.world_diaporama__item(src="img/world_diaporama_mountain.jpg", width="155", height="65")
            img.world_diaporama__item(src="img/world_diaporama_desert.jpg", width="155", height="65")
            img.world_diaporama__item(src="img/world_diaporama_volcan.jpg", width="155", height="65")
          span.world_layer
            span.world_layer__icon

  //- #layer_content.layer.layer--dark

  .gallery
    a.bt_close.bt_close--gallery(href="#")
      span.bt_close__icon
    .gallery__diaporama_holder
      ul.gallery_diaporama
        li.gallery_diaporama__item
          img(src="img/gallery_diaporama_0.jpg", width="319", height="478")
        li.gallery_diaporama__item
          img(src="img/gallery_diaporama_1.jpg", width="319", height="478")
        li.gallery_diaporama__item
          img(src="img/gallery_diaporama_2.jpg", width="319", height="478")
        li.gallery_diaporama__item
          img(src="img/gallery_diaporama_3.jpg", width="319", height="478")
        li.gallery_diaporama__item
          img(src="img/gallery_diaporama_4.jpg", width="319", height="478")
        li.gallery_diaporama__item
          img(src="img/gallery_diaporama_5.jpg", width="319", height="478")
        li.gallery_diaporama__item
          img(src="img/gallery_diaporama_6.jpg", width="319", height="478")
      .gallery__controller
        .gallery__controller__bt.gallery__controller__bt--top
        .gallery__controller__pagination.gallery__controller__pagination--current 01
        .gallery__controller__separator.separator--gray
        .gallery__controller__pagination.gallery__controller__pagination--total 06
        .gallery__controller__bt.gallery__controller__bt--bottom

  .contact
    a.bt_close.bt_close--contact(href="#")
      span.bt_close__icon
    .contact__banner
      .contact__banner__description.
        give us your e-mail to keep informed about the project, or 
        don't hesitate to contact us about our projects
    .contact__inputs
      a.bt_basic.bt_basic--contact(href="mailto:florian.zumbrunn@gmail.com") Contact us
      .contact__inputs__separator.separator--gray
      form.contact__form(name="form", action="#", method="post")
        input#input_mail.input.input--mail(type="email", placeholder="Enter your email", name="mail")
        input.bt_basic.bt_basic--form(type="submit", value="SEND")



  .menu
    ul.menu__holder
      li.menu__item.selected
        a.menu__link(href='#') ABOUT
      li.menu__item 
        a.menu__link(href='#') GALLERY
      li.menu__item 
        a.menu__link(href='#') CONTACTS


